## FastAPI environment (SLP)
SL_ENVIRONMENT=development
SL_AUTH_MODE=google

# Optional: override on a per-machine basis with `backend/.env.local`.

# MySQL databases
# IT module schema
SL_DATABASE_URL=mysql+aiomysql://devdutt.kumar:Spade0728@192.168.0.80:3306/sl_it
# Shared platform schema (users/roles)
SL_PLATFORM_DATABASE_URL=mysql+aiomysql://devdutt.kumar:Spade0728@192.168.0.80:3306/sl_platform

# Google OAuth secrets JSON (client_id used to validate Google ID tokens)
SL_GOOGLE_OAUTH_SECRETS_PATH=secrets/Oauth SL_Platform.json
# Optional overrides
# SL_GOOGLE_CLIENT_ID=
# SL_GOOGLE_CLIENT_SECRET=
# Restrict sign-in to Workspace domain
SL_GOOGLE_WORKSPACE_DOMAIN=studiolotus.in
# Allow small clock skew for token validation (seconds)
SL_GOOGLE_CLOCK_SKEW_SECONDS=180

# Role mapping from sl_platform.role_id -> app roles
# Example: {"2":["superadmin"],"3":["admin"],"4":["it_lead"],"5":["it_agent"],"6":["employee"]}
SL_ROLE_MAP_JSON={"2":["superadmin"],"3":["admin"],"4":["it_lead"],"5":["it_agent"],"6":["employee"],"7":["it_agent"],"8":["admin"]}

# Superadmin bootstrap (must exist in sl_platform.dim_person)
SL_SUPERADMIN_EMAIL=devdutt.kumar@studiolotus.in

# Gmail + Calendar (Domain-wide delegation)
SL_GOOGLE_APPLICATION_CREDENTIALS=secrets/google-service-account.json
SL_ENABLE_GMAIL=false
SL_ENABLE_CALENDAR=false
SL_GMAIL_SENDER_EMAIL=
SL_GMAIL_SENDER_NAME=SLP Helpdesk
SL_CALENDAR_ID=primary
SL_CALENDAR_TIMEZONE=Asia/Kolkata

# Ticketing controls
SL_REOPEN_WINDOW_DAYS=7
SL_RATE_LIMIT_TICKET_PER_MINUTE=5
