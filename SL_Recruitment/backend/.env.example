# FastAPI
SL_ENVIRONMENT=development
SL_DATABASE_URL=mysql+aiomysql://devdutt.kumar:Spade0728@192.168.0.80:3306/sl_recruitment
SL_PLATFORM_DATABASE_URL=mysql+aiomysql://devdutt.kumar:Spade0728@192.168.0.80:3306/sl_platform




# Google Drive (Shared Drive recommended)
# Root folder: https://drive.google.com/drive/folders/0AFaPtBKIqDHQUk9PVA
SL_DRIVE_ROOT_FOLDER_ID=0AFaPtBKIqDHQUk9PVA

# Optional: if you pre-create these buckets and want to pin IDs:
# SL_DRIVE_ONGOING_FOLDER_ID=
# SL_DRIVE_APPOINTED_FOLDER_ID=
# SL_DRIVE_NOT_APPOINTED_FOLDER_ID=

# Service account JSON path (preferred in this app; alternative is setting GOOGLE_APPLICATION_CREDENTIALS)
SL_GOOGLE_APPLICATION_CREDENTIALS=secrets/google-service-account.json

# Gmail + Calendar (Google Workspace with domain-wide delegation)
# Set to true to enable sending email + creating calendar events.
SL_ENABLE_GMAIL=true
SL_ENABLE_CALENDAR=true
# Sender identity (must be in your Workspace domain and delegated to the service account).
SL_GMAIL_SENDER_EMAIL=hr@studiolotus.in
SL_GMAIL_SENDER_NAME=SL Recruitment
# Calendar timezone (used for display + free/busy windows)
SL_CALENDAR_TIMEZONE=Asia/Kolkata

# Google OAuth secrets JSON (contains client_id used to validate Google ID tokens)
SL_GOOGLE_OAUTH_SECRETS_PATH=secrets/Oauth SL_Recruitment.json

# Allow small clock skew for Google token validation (seconds)
SL_GOOGLE_CLOCK_SKEW_SECONDS=180

# Auth mode: dev (headers) or google (Authorization: Bearer <id_token>)
SL_AUTH_MODE=google

# Optional overrides (normally read from `SL_GOOGLE_OAUTH_SECRETS_PATH`):
# SL_GOOGLE_CLIENT_ID=
# SL_GOOGLE_CLIENT_SECRET=
# Restrict sign-in to a Google Workspace domain (optional):
# SL_GOOGLE_WORKSPACE_DOMAIN=

# Public app base path for generated links (Next.js basePath)
SL_PUBLIC_APP_BASE_PATH=/recruitment
SL_PUBLIC_LINK_TTL_HOURS=168
SL_PUBLIC_LINK_SIGNING_KEY=
SL_PUBLIC_LINK_SKIP_SIGNATURE=false

# Optional: opening config for screening rules (Phase 3A)
# Example:
# SL_OPENING_CONFIG_JSON={"12":{"requires_relocation":true,"salary_band_max_annual":1800000}}
SL_OPENING_CONFIG_JSON=

# Redis pub/sub for live event streaming (recommended for production)
# REDIS_URL=redis://localhost:6379/0
